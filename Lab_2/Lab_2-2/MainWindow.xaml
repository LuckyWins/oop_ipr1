<Window x:Name="MainWindow1" x:Class="Lab_2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Canvas x:Name="DrawPlace" Background="White" MouseLeftButtonDown="DrawPlace_MouseLeftButtonDown"/>
        <ComboBox x:Name="FiguresList" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="105" SelectionChanged="FiguresList_SelectionChanged"/>
    </Grid>
</Window>
